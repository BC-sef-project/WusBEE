<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignInActivity"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingTop="80dp"
    android:layout_marginTop="80dp">

        <EditText
            android:id="@+id/full_name"
            android:layout_height="0dp"
            android:hint="@string/full_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/fullname"/>

        <EditText
            android:id="@+id/user_name"
            android:hint="@string/Username"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/user_img" />

        <EditText
            android:id="@+id/email"
            android:hint="@string/Email"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/ic_email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password"
            android:hint="@string/Password"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/pass_img"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:hint="@string/phone_number"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_phone_number"
            android:inputType="phone"/>

        <Button
            android:id="@+id/create_acc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:textColor="@color/honey"
            android:layout_marginTop="40dp"
            android:layout_marginStart="80dp" />

</LinearLayout>